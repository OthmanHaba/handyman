    }
  },
  "typography": {
    "fontFamilies": {
      "primary": "Inter, system-ui, sans-serif",
      "secondary": "system-ui, sans-serif"
    },
    "fontSizes": {
      "xs": "0.75rem",
      "sm": "0.875rem",
      "base": "1rem",
      "lg": "1.125rem",
      "xl": "1.25rem",
      "2xl": "1.5rem",
      "3xl": "1.875rem",
      "4xl": "2.25rem",
      "5xl": "3rem"
    },
    "fontWeights": {
      "normal": "400",
      "medium": "500",
      "semibold": "600",
      "bold": "700"
    },
    "lineHeights": {
      "tight": "1.25",
      "normal": "1.5",
      "relaxed": "1.75"
    },
    "headings": {
      "h1": {
        "fontSize": "3xl",
        "fontWeight": "bold",
        "lineHeight": "tight",
        "color": "gray-900"
      },
      "h2": {
        "fontSize": "2xl",
        "fontWeight": "bold",
        "lineHeight": "tight",
        "color": "gray-900"
      },
      "h3": {
        "fontSize": "xl",
        "fontWeight": "semibold",
        "lineHeight": "normal",
        "color": "gray-900"
      },
      "h4": {
        "fontSize": "lg",
        "fontWeight": "semibold",
        "lineHeight": "normal",
        "color": "gray-900"
      }
    },
    "body": {
      "large": {
        "fontSize": "lg",
        "fontWeight": "normal",
        "lineHeight": "relaxed",
        "color": "gray-700"
      },
      "regular": {
        "fontSize": "base",
        "fontWeight": "normal",
        "lineHeight": "normal",
        "color": "gray-700"
      },
      "small": {
        "fontSize": "sm",
        "fontWeight": "normal",
        "lineHeight": "normal",
        "color": "gray-600"
      }
    }
  },
  "spacing": {
    "scale": {
      "xs": "0.25rem",
      "sm": "0.5rem",
      "base": "1rem",
      "lg": "1.5rem",
      "xl": "2rem",
      "2xl": "3rem",
      "3xl": "4rem",
      "4xl": "6rem",
      "5xl": "8rem"
    },
    "component": {
      "padding": {
        "xs": "0.5rem",
        "sm": "0.75rem",
        "base": "1rem",
        "lg": "1.5rem",
        "xl": "2rem"
      },
      "margin": {
        "xs": "0.5rem",
        "sm": "0.75rem",
        "base": "1rem",
        "lg": "1.5rem",
        "xl": "2rem"
      },
      "gap": {
        "xs": "0.25rem",
        "sm": "0.5rem",
        "base": "1rem",
        "lg": "1.5rem",
        "xl": "2rem"
      }
    },
    "layout": {
      "containerPadding": "1rem",
      "sectionPadding": "2rem 0",
      "cardPadding": "1.5rem"
    }
  },
  "borderRadius": {
    "none": "0",
    "sm": "0.125rem",
    "base": "0.25rem",
    "md": "0.375rem",
    "lg": "0.5rem",
    "xl": "0.75rem",
    "2xl": "1rem",
    "3xl": "1.5rem",
    "full": "9999px"
  },
  "shadows": {
    "sm": "0 1px 2px 0 rgb(0 0 0 / 0.05)",
    "base": "0 1px 3px 0 rgb(0 0 0 / 0.1), 0 1px 2px -1px rgb(0 0 0 / 0.1)",
    "md": "0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1)",
    "lg": "0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1)",
    "xl": "0 20px 25px -5px rgb(0 0 0 / 0.1), 0 8px 10px -6px rgb(0 0 0 / 0.1)"
  },
  "components": {
    "buttons": {
      "primary": {
        "base": {
          "backgroundColor": "blue-600",
          "color": "white",
          "padding": "0.75rem 1.5rem",
          "borderRadius": "2xl",
          "fontWeight": "medium",
          "fontSize": "sm",
          "transition": "all 0.2s ease-in-out"
        },
        "hover": {
          "backgroundColor": "blue-700",
          "transform": "translateY(-1px)",
          "boxShadow": "lg"
        },
        "active": {
          "backgroundColor": "blue-800"
        },
        "disabled": {
          "backgroundColor": "gray-300",
          "color": "gray-500",
          "cursor": "not-allowed"
        }
      },
      "secondary": {
        "base": {
          "backgroundColor": "white",
          "color": "gray-900",
          "padding": "0.75rem 1.5rem",
          "borderRadius": "2xl",
          "fontWeight": "medium",
          "fontSize": "sm",
          "border": "1px solid #e5e7eb",
          "transition": "all 0.2s ease-in-out"
        },
        "hover": {
          "backgroundColor": "gray-50",
          "borderColor": "gray-300"
        }
      },
      "ghost": {
        "base": {
          "backgroundColor": "transparent",
          "color": "gray-700",
          "padding": "0.5rem 1rem",
          "borderRadius": "lg",
          "fontWeight": "medium",
          "fontSize": "sm",
          "transition": "all 0.2s ease-in-out"
        },
        "hover": {
          "backgroundColor": "gray-100",
          "color": "gray-900"
        }
      },
      "icon": {
        "base": {
          "backgroundColor": "blue-600",
          "color": "white",
          "padding": "1rem",
          "borderRadius": "full",
          "transition": "all 0.2s ease-in-out"
        },
        "hover": {
          "backgroundColor": "blue-700",
          "transform": "scale(1.05)"
        }
      }
    },
    "cards": {
      "base": {
        "backgroundColor": "white",
        "borderRadius": "2xl",
        "boxShadow": "md",
        "padding": "1.5rem",
        "transition": "all 0.3s ease-in-out"
      },
      "hover": {
        "boxShadow": "lg",
        "transform": "translateY(-2px)"
      },
      "handymanCard": {
        "structure": {
          "imageHeight": "16rem",
          "contentPadding": "1.25rem",
          "borderRadius": "2xl",
          "overflow": "hidden"
        },
        "imageOverlay": {
          "tagBackground": "white",
          "tagColor": "gray-700",
          "tagPadding": "0.25rem 0.75rem",
          "tagBorderRadius": "full",
          "tagFontSize": "xs",
          "tagFontWeight": "medium"
        },
        "content": {
          "nameSize": "lg",
          "nameFontWeight": "semibold",
          "countrySize": "sm",
          "countryColor": "gray-500",
          "priceSize": "xl",
          "priceFontWeight": "semibold",
          "ratingColor": "yellow-400"
        }
      },
      "promoCard": {
        "hero": {
          "height": "18.75rem",
          "backgroundGradient": "linear-gradient(to top, rgba(0,0,0,0.7), rgba(0,0,0,0.4), transparent)",
          "titleSize": "3xl",
          "titleFontWeight": "bold",
          "titleColor": "white",
          "subtitleSize": "lg",
          "subtitleColor": "white"
        },
        "service": {
          "height": "18.75rem",
          "backgroundGradient": "linear-gradient(to top, rgba(0,0,0,0.6), transparent)",
          "titleSize": "xl",
          "titleFontWeight": "bold",
          "titleColor": "white"
        },
        "compact": {
          "height": "8.9375rem",
          "backgroundGradient": "linear-gradient(to top, rgba(0,0,0,0.6), transparent)",
          "titleSize": "lg",
          "titleFontWeight": "bold",
          "titleColor": "white"
        }
      }
    },
    "navigation": {
      "header": {
        "backgroundColor": "white",
        "boxShadow": "sm",
        "padding": "1rem 0",
        "borderBottom": "1px solid #f3f4f6"
      },
      "logo": {
        "iconSize": "2rem",
        "iconColor": "blue-600",
        "textSize": "xl",
        "textFontWeight": "medium"
      },
      "links": {
        "fontSize": "base",
        "fontWeight": "normal",
        "color": "gray-700",
        "activeColor": "blue-600",
        "activeFontWeight": "medium",
        "hoverColor": "blue-600",
        "spacing": "2rem"
      },
      "userProfile": {
        "iconSize": "2.5rem",
        "iconBackground": "blue-600",
        "iconColor": "white",
        "iconBorderRadius": "full"
      }
    },
    "searchBar": {
      "container": {
        "backgroundColor": "white",
        "borderRadius": "full",
        "boxShadow": "lg",
        "border": "1px solid #e5e7eb",
        "hoverBoxShadow": "xl",
        "transition": "all 0.3s ease-in-out"
      },
      "sections": {
        "padding": "1.5rem",
        "borderRight": "1px solid #e5e7eb"
      },
      "labels": {
        "fontSize": "xs",
        "fontWeight": "semibold",
        "color": "gray-900",
        "marginBottom": "0.25rem"
      },
      "inputs": {
        "fontSize": "sm",
        "color": "gray-600",
        "placeholderColor": "gray-400",
        "backgroundColor": "transparent",
        "focusColor": "gray-900"
      },
      "searchButton": {
        "backgroundColor": "blue-600",
        "hoverBackgroundColor": "blue-700",
        "color": "white",
        "padding": "1rem",
        "borderRadius": "full",
        "transition": "all 0.2s ease-in-out"
      }
    },
    "categoryNavigation": {
      "container": {
        "gap": "0.75rem",
        "padding": "1rem 0"
      },
      "categoryItem": {
        "padding": "1rem",
        "borderRadius": "xl",
        "backgroundColor": "white",
        "border": "1px solid #e5e7eb",
        "transition": "all 0.2s ease-in-out",
        "activeBackgroundColor": "blue-50",
        "activeBorderColor": "blue-200",
        "hoverBackgroundColor": "gray-50"
      },
      "categoryIcon": {
        "size": "1.5rem",
        "color": "gray-600",
        "activeColor": "blue-600"
      },
      "categoryText": {
        "fontSize": "sm",
        "fontWeight": "medium",
        "color": "gray-700",
        "activeColor": "blue-600"
      }
    },
    "carousel": {
      "container": {
        "gap": "1rem",
        "scrollBehavior": "smooth"
      },
      "controls": {
        "buttonSize": "2.5rem",
        "buttonBackground": "white",
        "buttonBorder": "1px solid #e5e7eb",
        "buttonBorderRadius": "full",
        "buttonHoverBackground": "gray-50",
        "iconSize": "1.25rem",
        "iconColor": "gray-600"
      },
      "progressBar": {
        "height": "0.25rem",
        "backgroundColor": "gray-200",
        "borderRadius": "full",
        "activeColor": "blue-600"
      }
    },
    "tags": {
      "base": {
        "padding": "0.25rem 0.75rem",
        "borderRadius": "full",
        "fontSize": "xs",
        "fontWeight": "medium"
      },
      "variants": {
        "primary": {
          "backgroundColor": "blue-100",
          "color": "blue-700"
        },
        "secondary": {
          "backgroundColor": "gray-100",
          "color": "gray-700"
        },
        "purple": {
          "backgroundColor": "purple-100",
          "color": "purple-700"
        },
        "overlay": {
          "backgroundColor": "rgba(0,0,0,0.5)",
          "color": "white",
          "backdropFilter": "blur(4px)"
        }
      }
    },
    "ratings": {
      "container": {
        "display": "flex",
        "alignItems": "center",
        "gap": "0.25rem"
      },
      "star": {
        "size": "1rem",
        "color": "yellow-400"
      },
      "text": {
        "fontSize": "sm",
        "fontWeight": "medium",
        "color": "gray-900"
      }
    }
  },
  "layouts": {
    "container": {
      "maxWidth": "1280px",
      "margin": "0 auto",
      "padding": "0 1rem"
    },
    "section": {
      "padding": "2rem 0"
    },
    "grid": {
      "promoSection": {
        "desktop": "grid-cols-4",
        "tablet": "grid-cols-2",
        "mobile": "grid-cols-1",
        "gap": "1rem"
      },
      "handymanCards": {
        "desktop": "grid-cols-5",
        "tablet": "grid-cols-3",
        "mobile": "grid-cols-1",
        "gap": "1rem"
      },
      "categoryIcons": {
        "desktop": "grid-cols-8",
        "tablet": "grid-cols-6",
        "mobile": "grid-cols-4",
        "gap": "0.75rem"
      }
    },
    "flexbox": {
      "header": {
        "justifyContent": "space-between",
        "alignItems": "center",
        "gap": "2rem"
      },
      "navigation": {
        "gap": "2rem",
        "alignItems": "center"
      },
      "cardContent": {
        "flexDirection": "column",
        "gap": "0.5rem"
      }
    }
  },
  "animations": {
    "transitions": {
      "fast": "0.15s ease-in-out",
      "normal": "0.2s ease-in-out",
      "slow": "0.3s ease-in-out"
    },
    "hover": {
      "cardLift": "translateY(-2px)",
      "buttonLift": "translateY(-1px)",
      "scale": "scale(1.05)",
      "imageScale": "scale(1.1)"
    },
    "focus": {
      "ringWidth": "2px",
      "ringColor": "blue-500",
      "ringOpacity": "0.5"
    }
  },
  "breakpoints": {
    "sm": "640px",
    "md": "768px",
    "lg": "1024px",
    "xl": "1280px",
    "2xl": "1536px"
  },
  "iconography": {
    "library": "@nuxt/icon with material-symbols",
    "sizes": {
      "xs": "1rem",
      "sm": "1.25rem",
      "base": "1.5rem",
      "lg": "2rem",
      "xl": "2.5rem"
    },
    "commonIcons": {
      "handyman": "material-symbols:handyman",
      "search": "material-symbols:search",
      "star": "material-symbols:star",
      "person": "material-symbols:person",
      "language": "material-symbols:language",
      "menu": "material-symbols:menu",
      "close": "material-symbols:close",
      "arrow-outward": "material-symbols:arrow-outward",
      "handshake": "material-symbols:handshake",
      "construction": "material-symbols:construction",
      "cleaning-services": "material-symbols:cleaning-services",
      "home-repair-service": "material-symbols:home-repair-service",
      "format-paint": "material-symbols:format-paint",
      "local-shipping": "material-symbols:local-shipping",
      "yard": "material-symbols:yard",
      "medical-services": "material-symbols:medical-services",
      "plumbing": "material-symbols:plumbing",
      "electrical-services": "material-symbols:electrical-services",
      "carpenter": "material-symbols:carpenter",
      "grass": "material-symbols:grass"
    }
  },
  "patterns": {
    "imageOverlays": {
      "hero": "linear-gradient(to top, rgba(0,0,0,0.7), rgba(0,0,0,0.4), transparent)",
      "card": "linear-gradient(to top, rgba(0,0,0,0.6), transparent)",
      "subtle": "linear-gradient(to top, rgba(0,0,0,0.3), transparent)"
    },
    "backgroundPatterns": {
      "pageBackground": "gray-50",
      "cardBackground": "white",
      "headerBackground": "white",
      "overlayBackground": "rgba(0,0,0,0.5)"
    },
    "borderPatterns": {
      "subtle": "1px solid #f3f4f6",
      "medium": "1px solid #e5e7eb",
      "strong": "1px solid #d1d5db"
    }
  },
  "contentGuidelines": {
    "imagery": {
      "aspectRatios": {
        "heroCard": "2:1",
        "serviceCard": "4:3",
        "profileImage": "1:1",
        "compactCard": "16:9"
      },
      "quality": "High resolution, professional photography",
      "style": "Bright, clean, modern aesthetic with natural lighting",
      "subjects": "Real people, authentic work environments, quality tools and materials"
    },
    "copywriting": {
      "tone": "Professional, friendly, approachable",
      "voice": "Helpful, trustworthy, efficient",
      "headlines": "Action-oriented, benefit-focused",
      "descriptions": "Clear, concise, informative"
    }
  },
  "accessibility": {
    "colorContrast": {
      "minimum": "4.5:1 for normal text",
      "enhanced": "7:1 for enhanced accessibility"
    },
    "focusStates": {
      "visible": "Always visible focus indicators",
      "style": "2px solid blue-500 with 0.5 opacity ring"
    },
    "semanticMarkup": {
      "headings": "Proper heading hierarchy (h1-h6)",
      "landmarks": "nav, main, section, article elements",
      "forms": "Proper labels and fieldsets"
    },
    "altText": {
      "images": "Descriptive alt text for all images",
      "decorative": "Empty alt attribute for decorative images"
    }
  },
  "responsiveDesign": {
    "approach": "Mobile-first responsive design",
    "breakpointStrategy": "Progressive enhancement from mobile to desktop",
    "gridSystem": "CSS Grid and Flexbox for layout",
    "imageHandling": "Responsive images with appropriate sizes",
    "touchTargets": "Minimum 44px touch target size on mobile"
  }
} 